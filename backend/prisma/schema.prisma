generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * Usuarios
 */
model user {
  id            Int         @id @default(autoincrement())
  firstName     String
  lastName      String
  username      String
  avatar        String
  createAt      DateTime    @default(now())
  updateAt      DateTime    @updatedAt
  creadential   credentials @relation(fields: [credentialsId], references: [id])
  credentialsId Int         @unique
  event         event[]
  interes       interes[]
}

model credentials {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user     user?
}

/**
 * Eventos
 */

model event {
  id             Int              @id @default(autoincrement())
  title          String
  images         String
  description    String
  fecha          DateTime
  ubicacion      String
  createAt       DateTime         @default(now())
  updateAt       DateTime         @updatedAt
  event_category event_category[]
  event_tag      event_tag[]
  usuario        user?            @relation(fields: [userId], references: [id])
  userId         Int?
  organizacion   organizacion?    @relation(fields: [organizacionId], references: [id])
  organizacionId Int?
}

model tag {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  event_tag   event_tag[]
}

model category {
  id             Int              @id @default(autoincrement())
  name           String
  description    String
  image          String
  createAt       DateTime         @default(now())
  updateAt       DateTime         @updatedAt
  event_category event_category[]
}

model event_category {
  id         Int      @id @default(autoincrement())
  event      event    @relation(fields: [eventId], references: [id])
  eventId    Int
  category   category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model event_tag {
  id      Int   @id @default(autoincrement())
  event   event @relation(fields: [eventId], references: [id])
  eventId Int
  tag     tag   @relation(fields: [tagId], references: [id])
  tagId   Int
}

/**
 * Organziaciones
 */

model organizacion {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  image       String
  banner      String
  createAt    DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  interes     interes[]
  event       event[]
}

model interes {
  id             Int          @id @default(autoincrement())
  usuario        user         @relation(fields: [userId], references: [id])
  userId         Int
  organizacion   organizacion @relation(fields: [organizacionId], references: [id])
  organizacionId Int
}
